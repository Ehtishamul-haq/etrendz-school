<%#= javascript_include_tag :application %>
<div id="content-header" style="padding-left: 20px;">
  <%#= image_tag("examination/show_exam.png") %>
  <h1>
    <%= t('ranking_levels_text') %>
  </h1>
  <h3>
    <%= t('manage_ranking_levels') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>
<div id="page-yield" style="padding-left: 20px;">
  <div class="course-select">
    <div class="label-field-pair">
        <%= t('select_a_course') %> : <%= select :ranking_level, :course_id, Course.active.map {|b| [b.full_name, b.id]}, { prompt: t('select_a_course')}, { onChange: "onChangeRequest(this, '#{url_for(action: :load_ranking_levels, course_id: 'paramid')}')"} %>
    </div>
  </div>
  <div id="flash"></div>
  <div id="errors">
    <%= error_messages_for 'ranking_level' %>
  </div>
  <div id="course_ranking_levels"></div>
</div>
