    <div class="link-box">
      <div class="link-heading">
        <%= link_to t('combined_reports'), combined_report_exam_index_path, style: "font-weight:bold;font-size:18px;" %>
      </div>
      <div class="link-descr">
        <%= t('generates_combined_student_report') %>
      </div>
    </div>
    </div>
    </div><br><br>
    <% if Setting.cce_enabled? and permitted_to? :index, :cce_reports %>
      <div class="link-box">
        <div class="link-heading">
          <%= link_to t('cce_reports'), cce_reports_path %>
        </div>
        <div class="link-descr">
          <%= t('generates_combined_student_report') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
