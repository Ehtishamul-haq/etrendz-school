<div class="grades">
  <div class="label-field-pair">
    <label for="configuration_grading_systems">
      <%= t('class_designations_text') %>
      :
    </label>
  </div>
  <div class="fee_category_scroll">
    <div class="sel-list">
      <%= t('select') %>
      <%= select_all('each_batch_class') %>
      <%= select_none('each_batch_class') %>
    </div>
    <% @class_designations.each do |d| %>
      <div class="each_batch_class">
        <%= check_box_tag "combined_report[designation_ids][]", d.id,false,:class=>'batches_box' %>
        <%= d.name %>
      </div>
    <% end %>
  </div>
</div>
<div class="grades">
  <div class="label-field-pair">
    <label for="configuration_grading_systems">
      <%= t('ranking_levels_text') %>
      :
    </label>
  </div>
  <div class="fee_category_scroll">
    <div class="sel-list">
      <%= t('select') %>
      <%= select_all('each_batch') %>
      <%= select_none('each_batch') %>
    </div>
    <% @ranking_levels.each do |r| %>
      <div class="each_batch">
        <%= check_box_tag "combined_report[level_ids][]", r.id,false,:class=>'batches_box1' %>
        <%= r.name %>
      </div>
    <% end %>
  </div>
</div>
