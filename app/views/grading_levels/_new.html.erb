<%= csrf_meta_tag %>
<div id="grading-levels-form">
<div class="modal-head">
  <label class="widget-header widget-header-flat" style="width:98%;">
  <center><h4><%= "Add Grade" %></center></h4></label>
</div>
  <%= form_for(@grading_level, :remote => true) do |f| %>
   <div class="modal-body">
    <div id="form-errors"></div>
    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>
    <div class="label-field-pair">
      <%= f.label :"#{t('name')}" %>
      <div class="input-field">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="label-field-pair">
      <%= f.label :min_score, t('min_score') %>
      <div class="input-field">
        <%= f.text_field :min_score %>
      </div>
    </div>
    <div class="label-field-pair">
      <%= f.label :description, "Description" %>
      <div class="input-field">
        <%= f.text_field :description %>
      </div>
    </div>
    <% if @credit %>
      <div class="label-field-pair">
        <%= f.label :credit_points, "Credit Points" %>
        <div class="input-field">
          <%= f.text_field :credit_points %>
        </div>
      </div>
    <% end %>
  </div>
    <br>
  <div class="modal-footer">
    <%=  submit_tag "â–º #{t('save')}",:class=>'btn btn-sm btn-pink' %>
  </div>
  <% end %>
</div>
