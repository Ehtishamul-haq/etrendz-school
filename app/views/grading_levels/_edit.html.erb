<%= csrf_meta_tag %>
<div id="grading-levels-form">
<div class="modal-head">
  <label class="head_label"><%= @batch.full_name unless @batch.nil? %><span></span></label>
</div>

  <%= form_for(@grading_level, :remote => true) do |f| %>
   <div class="modal-body">
    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container">
        <%= f.label :"#{t('name')}" %>
      </div>
      <div class="input-container">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="label-field-pair">
      <div class="label-container">
        <%= f.label :min_score, t('min_score') %>
      </div>
      <div class="input-container">
        <%= f.text_field :min_score %>
      </div>
    </div>
    <div class="label-field-pair">
      <%= f.label :description, "Description" %>
      <div class="input-field">
        <%= f.text_field :description %>
      </div>
    </div>
    <% if @credit %>
      <div class="label-field-pair">
        <%= f.label :credit_points, "Credit Points" %>
        <div class="input-field">
          <%= f.text_field :credit_points %>
        </div>
      </div>
    <% end %>
  </div>
    <br>
  <div class="modal-footer">
    <%=  submit_tag "â–º #{t('save')}",:class=>'btn btn-sm btn-pink' %>
  </div>
  <% end %>
</div>
