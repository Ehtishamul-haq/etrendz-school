<%= stylesheet_link_tag("elective_groups/new.css") %>
<div id="content-header">
  <%= image_tag("examination/show_exam.png") %>
  <h1>
    <%= t('batches_text') %>
  </h1>
  <h3>
    <%= "#{t('new_elective')}" %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li>
      <%= link_to t('new_text'), {:action => :new, :batch_id => @batch.id} %>
    </li>
  </ul>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="bread_crumb">
    <%= link_to t('course_text'), courses_path %> »
    <%= link_to @course.full_name, @course %> »
    <%= link_to "#{t('batch')} #{@batch.name}", {:controller => :batches, :action => :show , :course_id => @course.id, :id => @batch.id} %> »
    <%= link_to "#{t('electives')}", {:action => :index, :batch_id => @batch.id} %> »
    <%= t('new_text') %>
  </div>
  <div class="box">
    <%= form_for(@elective_group, :url => {:action => :create, :batch_id=> @batch.id}) do |f| %>
      <% @elective_group.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <div class="label-field-pair">
        <div class="label-container">
          <%= f.label "#{t('name')}" %>
        </div>
        <div class="input-container">
          <%= f.text_field :name %>
        </div>
      </div>
      <br>
      <%= submit_tag "", :value => " #{t('save')}", :class => "btn btn-pink btn-sm" %>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
