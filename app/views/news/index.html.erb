
  <div class="col-xs-9">
<%= form_tag('/news', method: 'get') do %>
  <%= text_field_tag("query") %>
  <%= submit_tag 'Search News', class: 'btn btn-sm btn-info' %>
<% end %>
</div>

  <div class="col-xs-3 pull-right">
    <button class="btn btn-success"onclick="window.location.href='/news/new'">Add</button>
  </div>
<br><br><br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @news.each do |news| %>
      <tr>
        <td><%= i += 1 %></td>
        <td><%= link_to news.title, "/news/#{news.id}" %></td>
        <td><%= news.author.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
