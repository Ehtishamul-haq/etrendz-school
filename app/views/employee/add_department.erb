<div id="content-header">
  <%= image_tag("  HR/show_hr.png") %>
  <h1>
    <%= "#{t('employee_settings')}" %>
  </h1>
  <h3>
    <%= t('add_department') %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="page-yield">
  <div class="box">
    <div class="bread_crumb">
      <%= link_to t('hr_text'), controller: :employee, action: :hr %>
    </div>
    <%= form_for :department do |c| %>
      <% unless flash[:notice].nil? %>
        <p class="flash-msg">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <% unless flash[:warn_notice].nil? %>
        <div id="errorExplanation1">
          <ul>
            <li>
              <%= flash[:warn_notice] %>
            </li>
          </ul>
        </div>
      <% end %>
      <%= error_messages_for 'department' %>
      <div id="form-content">
        <div class="label-field-pair">
          <label for="department_name">
            <%= t('name') %>
          </label>
          <div class="text-input-bg">
            <%= c.text_field :name %>
          </div>
        </div>
        <div class="label-field-pair">
          <label for="department_code">
            <%= "#{t('department_code')}" %>
          </label>
          <div class="text-input-bg">
            <%= c.text_field :code %>
          </div>
        </div>
        <div class="label-checkbox-pair">
          <label class="status" for="status">
            <%= t('status') %>
          </label>
          <div id="radio-buttons">
            <%= c.radio_button  "status", "true", :checked => "checked" %>
            <label class="label_for_status" for="add_grade_status_true">
              <%= t('active') %>
            </label>
            <%= c.radio_button  "status", "false" %>
            <label class="label_for_status" for="add_grade_status_false">
              <%= t('inactive') %>
            </label>
          </div>
        </div>
        <div id="submit-button">
          <%= submit_tag(" #{t('create_text')}") %>
        </div>
      </div>
    <% end %>
    <div id="department-list">
      <%= render :partial => "department" %>
    </div>
  </div>
</div>
