<h1>Listing Students</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Admission No</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.admission_no %></td>
        <td><%= link_to 'View Profile', student, :class => "btn btn-sm btn-purple" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
