<%= javascript_include_tag :application %>
<ul id="category-list">
  <% @student_categories.each do |c| %>
    <li class="list<%= cycle('odd', 'even') %>">
      <div class="category-name">
        <%= c.name %>
      </div>
      <div class="category-edit">
        <%= link_to "#{t('edit_text')}", { :action => 'category_edit', :id => c.id , :remote => true} %>
      </div>
      <div class="category-delete">
        <%= link_to "#{t('delete_text')}",  { :action => 'category_delete', :id => c.id } , :confirm =>"#{t('delete_confirm_msg')}", :remote => true %>
      </div>
    </li>
  <% end %>
</ul>
