<%#= javascript_include_tag :application %>
<%#= stylesheet_link_tag("subjects/index.css") %>
<div id="content-header">
  <%#= image_tag("show_settings.png") %>
  <h1>
    <%= t('subject') %>
  </h1>
  <h3>
    <%= t('home') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>
<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg">
        <%= flash[:notice] %>
      </p>
    <% end %>
  </div>
  <div class="box">
    <div class="label-field-pair">
      <label for="student_course">
        <%= t('select_a_batch') %>
        :
        <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
      </label>
      <div class="text-input-bg">
        <%= select :batch, :id, @batches.map {|b| [b.full_name, b.id] }, { :prompt =>  t('select_a_batch')}, {:onChange => "onChangeRequest(this, '#{url_for(action: :show_batch, batch_id: 'paramid')}')"} %>
      </div>
    </div>
    <div id="subjects"></div>
    <div id="modal-box" style="display:none;"></div>
    <div class="extender"></div>
  </div>
</div>
