<div id="content-header">
  <%= image_tag("HR/show_hr.png") %>
  <h1>
    <%= t('payroll_text') %>
  </h1>
  <h3>
    <%= t('index') %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="link-box">
    <div class="link-heading">
      <%= link_to "#{t('add_payroll_category')}", :controller=>"payroll", :action=>"add_category" %>
    </div>
    <div class="link-descr">
      <%= t('add_edit_employee_payroll_category') %>
    </div>
  </div>
</div>
