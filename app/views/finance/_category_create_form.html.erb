<label class="widget-header widget-header-flat" style="width:98%;">
  <center><h4><%= t('create_new_category') %></h4></center>
  
</label>
<%= form_for @finance_transaction_category, :url => {:action => 'category_create'}, :remote => true do |f| %>
  <div id="form-errors"></div>
  <div class="row">
  <div class="col-md-6">
  <div class="label-field-pair" style="padding-left:20px;">
    <div class="label-container">
      <label>
        <%= t('category_name') %>:
      </label>
    </div>
    <div class="input-container">
      <%= f.text_field :name %>
    </div>
  </div>
  </div>
  <div class="col-md-6">
  <div class="label-field-pair">
    <div class="label-container">
      <label>
        <%= t('description') %>:
      </label>
    </div>
    <div class="input-container">
      <%= f.text_field :description %>
    </div>
  </div>
  </div>
  </div><br>
  <div class="row">
  <div class="col-md-8">
  <div class="label-field-pair" style="padding-left:20px;">
    <div class="col-sm-1">
    <div class="input-container">
      <%= f.check_box :is_income %>
    </div>
    </div>
  <div class="col-sm-6">
    <div class="label-container">
      <label>
        <%= t('is_this_under_income') %>
      </label>
    </div>
    </div>
  </div>
  </div>
  <div class="col-md-4">
  <div id="modelbox-submit">
    <%= submit_tag t('create_text'),:class=>'btn btn-primary' %>
  </div>
  </div>
  </div><br>
<% end %>
