<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="box">
  <div class="row">
  <div class="col-md-2">
    <div class="field1">
      <%= t('donor') %>
    </div>
    </div>
    <div class="col-md-2">
    <div class="val themed_text">
      <%= @donation.donor %>
    </div>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
    <div class="field1">
      <%= t('description') %>
    </div>
    </div>
    <div class="col-md-2">
    <div class="val themed_text">
      <%= @donation.description %>
    </div>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
    <div class="field1">
      <%= t('amount') %>
    </div>
    </div>
    <div class="col-md-2">
    <div class="val themed_text">
      <%= @donation.amount %>
    </div>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
    <div class="field1">
      <%= t('transaction_id') %>
    </div>
    </div>
    <div class="col-md-2">
    <div class="val themed_text">
      <%= @donation.transaction_id unless @donation.transaction_id.nil? %>
    </div>
    </div>
    </div>
    <div><br>
      <%= link_to " #{t('print_receipt')}", {:action => 'donation_receipt_pdf', :id => @donation.id}, :format => 'pdf', :target => '_blank', :class=>"user_button btn btn-white btn-default btn-round" %>
    </div>
  </div>
</div>
