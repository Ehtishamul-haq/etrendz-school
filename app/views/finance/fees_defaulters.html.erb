<div id="content-header" style="padding-left: 20px;">
  <%#= image_tag("show_finance.png") %>
  <h1>
    <%= t('fees_defaulters_text') %>
  </h1>
  <h3>
    <%= t('students_fee_dues') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>
<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <%= form_for :fees_defaulters do %>
    <div id="batchs1">
      <div class="label-field-pair">
        <label>
          <%= t('select_courses') %>
        </label>
        <div class="text-input-bg">
          <%#= select :fees_defaulters, :course_id, @courses.map { |c| [c.full_name, c.id] }, {:prompt => "#{t('select_courses')}"}, {:onChange => "#{remote_function(:url => {:action => "update_batches"}, :with => "'course_id='+value")}"} %>
          <%= select :fees_defaulters, :course_id, @courses.map { |c| [c.full_name, c.id] }, {:prompt => "#{t('select_courses')}"}, {:onChange => "onChangeRequest(this, '#{url_for(action: :update_batches, course_id: 'paramid')}')"} %>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%= t('select_batch') %>
        </label>
        <div class="text-input-bg" id="batches_list">
          <%#= select :fees_defaulters, :batch_id, @batchs.map { |b| [b.full_name, b.id] }, {:prompt => "#{t('select_batch')}"}, {:onChange => "#{remote_function(:url => {:action => "update_fees_collection_dates_defaulters"}, :with => "'batch_id='+value")}"} %>
          <%= select :fees_defaulters, :batch_id, @batchs.map { |b| [b.full_name, b.id] }, {:prompt => "#{t('select_batch')}"}, {:onChange =>"onChangeRequest(this, '#{url_for(action: :update_fees_collection_dates_defaulters, batch_id: 'paramid')}')"} %>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%= t('select_fee_collection_date') %>
        </label>
        <div class="text-input-bg">
          <div id="fees_collection_dates">
            <%= render :partial => "fees_collection_dates_defaulters" %>
          </div>
        </div>
      </div>
      <div id="student"></div>
    </div>
  <% end %>
</div>
