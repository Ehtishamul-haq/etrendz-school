<h1>Listing Courses</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Course name</th>
      <th>Section name</th>
      <th></th>
      <th></th>
      <!-- <th></th> -->
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.full_name, course %></td>
        <td><%= course.section_name %></td>
        <td><%= link_to 'Edit', edit_course_path(course), :class => "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, :class => "btn btn-primary" %>
