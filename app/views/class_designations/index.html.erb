<%= javascript_include_tag :application %>
<div id="content-header" style="padding-left: 20px;">
  <%#= image_tag("examination/show_exam.png") %>
  <h1>
    <%= t('class_designations_text') %>
  </h1>
  <h3>
    <%= t('manage_class_designations') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>
<div id="page-yield" style="padding-left: 20px;">
  <div class="course-select">
    <div class="label-field-pair">
      <label for="student_course">
        <%= t('select_a_course') %>:
      </label>
      <div class="text-input-bg">
        <%= select :class_designation, :course_id, Course.active.map {|b| [b.full_name, b.id]}, { prompt: t('select_a_course')}, { onChange: "onChangeRequest(this, 'load_class_designations_class_designations_path(course_id: 'paramid')')"} %>
      </div>
    </div>
  </div>
  <div id="flash"></div>
  <div id="errors">
    <%= error_messages_for 'class_designation' %>
  </div>
  <div id="course_class_designations"></div>
</div>
