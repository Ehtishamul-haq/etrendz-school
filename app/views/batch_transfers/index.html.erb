<div id="content-header" style="padding-left: 20px;">
  <%#= image_tag("show_settings.png") %>
  <h1>
    <%= t('batch_transfer') %>
  </h1>
  <h3>
    <%= t('home') %>
  </h3>
  <div id="app-back-button">
    <%#= back_button %>
  </div>
</div>

<div id="page-yield" style="padding-left: 20px;">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="label-field-pair">
    <label>
      <%= t('select_a_course') %>
      <%= image_tag("loader.gif", align: :absmiddle, border: 0, id: :loader, style: "display: none;" ) %>
    </label>
    <div class="text-input-bg">
      <%= select :courses, :name, Course.active.map {|b| ["#{b.full_name}", b.id]},{ :prompt => t('select_a_course')}, { :onChange => "onChangeRequest(this, '#{url_for(action: :update_batch, course_name: 'paramid')}')"} %>

    </div>
  </div>
  <div id="update_batch"></div>
  <div class="extender"></div>
</div>
